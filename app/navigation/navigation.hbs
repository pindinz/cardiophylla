<script src="/js/login.js" type="application/javascript"></script>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    {{#if meta.navigation.home }}
    <span class="navbar-brand disabled">{{__ 'navigation.home'}}</span>
    {{else}}
    <a class="navbar-brand" href="/">{{__ 'navigation.home'}}</a>
    {{/if}}
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <ul class="navbar-nav mr-auto">


        </ul>

        <ul class="nav navbar-nav ml-auto w-100 justify-content-end">
            {{#if meta.user.permissions.write.settings}}
            <li class="nav-item {{#if meta.navigation.settings}}active{{/if}}" title="{{__ 'navigation.settings'}}">
                <a class="nav-link" href="/settings"><i class="fa fa-sliders fa-lg"></i>
                    {{#if meta.navigation.settings}}
                    <span class="sr-only">{{__ 'navigation.current-item'}}</span>
                    {{/if}}
                </a>
            </li>
            {{/if}}
            {{#if meta.user.authenticated }}
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true"
                   aria-expanded="false"><i class="fa fa-user-circle-o fa-lg" aria-hidden="true"></i></a>
                <div class="dropdown-menu">
                    <span class="dropdown-item"><i class="fa fa-user-o"></i> {{meta.user.name}}</span>
                    <div class="dropdown-divider"></div>
                    {{> logout}}
                </div>
            </li>
            {{else}}
            <li class="nav-item">
                <a class="nav-item nav-link" href="#" onclick="showLogin();">
                    <i class="fa fa-power-off fa-lg"></i>
                </a>
                <span class="sr-only">{{__ 'navigation.login'}}</span>
            </li>
            {{/if}}

        </ul>

    </div>
</nav>